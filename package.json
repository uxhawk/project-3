{
  "name": "project-3",
  "version": "1.0.0",
  "description": "GW Bootcamp Project #3",
  "main": "server.js",
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint --quiet .",
    "fix": "eslint --fix .",
    "watch": "nodemon server.js",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uxhawk/project-3.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/uxhawk/project-3/issues"
  },
  "homepage": "https://github.com/uxhawk/project-3#readme",
  "dependencies": {
    "mongoose": "^5.9.20",
    "nodemon": "^2.0.4"
  },
  "devDependencies": {
    "eslint": "^7.3.1",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-react": "^7.20.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  }
}
